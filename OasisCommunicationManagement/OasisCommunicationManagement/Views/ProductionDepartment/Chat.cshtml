@model IEnumerable<OasisCommunicationManagement.Models.MessagesModel>
@{
    ViewBag.Title = "Chat";
    Layout = "~/Views/Shared/_HomePageLayout.cshtml";
}



<!-- DIRECT CHAT -->
<div class="card direct-chat direct-chat-primary">
    <div class="card-header">
        <h3 class="card-title">Direct Chat</h3>

        <div class="card-tools">
         
            <a href="../ProductionDepartment/inbox">
              
                close
            </a>
        </div>
    </div>
    <!-- /.card-header -->
    <!-- Message. Default to the left -->
    <!-- /.direct-chat-msg -->
    <!-- Message to the right -->

    @foreach (var item in Model)
    {


        <div class="card-body">
            <!-- Conversations are loaded here -->
            <div class="direct-chat-messages">



                @if (item.SenderID != Convert.ToInt32(Session["senderId"]))
                {
                    <div class="direct-chat-msg">
                        <div class="direct-chat-infos clearfix">
                            <span class="direct-chat-name float-left">@Session["username"]</span>
                            <span class="direct-chat-timestamp float-right">@item.DateSent</span>
                        </div>
                        <!-- /.direct-chat-infos -->
                        <!-- /.direct-chat-img -->
                        <div class="direct-chat-text">
                            @item.messages
                        </div>
                        <!-- /.direct-chat-text -->
                    </div>

                }

                else
                {
                    <div class="direct-chat-msg right">
                        <div class="direct-chat-infos clearfix">
                            <span class="direct-chat-name float-right">@Session["SendName"]</span>
                            <span class="direct-chat-timestamp float-left">@item.DateSent</span>
                        </div>
                        <!-- /.direct-chat-infos -->
                        <!-- /.direct-chat-img -->
                        <div class="direct-chat-text">
                            @item.messages
                        </div>
                        <!-- /.direct-chat-text -->
                    </div>

                }

            </div>
        </div>



    }


    <div class="panel-footer">

        <form method="post" action="SendMessage">

            <div class="input-group">
                <input style="width : 150px;height:55px;margin:0 " ;type="text" name="Message" placeholder="Press Enter" class="form-control primary">
                <br />
                <div>
                    <span class="input-group-btn">
                        <button style="width : 100px;height:55px;margin:0;" class="btn btn-primary" type="submit" name="Send" value="send message">send </button>
                    </span>

                </div>
                <br />
                <hr />
                <div>
                    <span class="input-group-btn">
                        <a style="width : 100px;height:55px;margin:0;" class="btn btn-primary" href="../ProductionDepartment/inbox">Back </a>
                    </span>

                </div>


            </div>
        </form>

    </div>

</div>
      


                   